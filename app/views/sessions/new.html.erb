<div class="container">
  <div class="row">
    <div class="col-6 col-xs-12 mx-auto">
        <%= form_with url: "/sessions" do |f| %>
            <h1>Please enter email and password.</h1>
            <div class="mb-3">
                <%= f.label :email, "Email:", class: "form-label" %>
                <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label :password, "Password:", class: "form-label" %>
                <%= f.password_field :password, class: "form-control" %>
            </div>
            <div class="text-center mb-3">
                <%= f.submit "Login Now!", class: "btn btn-secondary" %>
            </div>
            <% end %>
            <div class="text-center mb-3">
                <%= button_to "Log in with Google", '/auth/google_oauth2', class: "btn btn-primary"  %>
            </div>
        </div>
    </div>
</div>