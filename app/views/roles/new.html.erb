<div class="container">
    <div class="row">
        <div class="col-6 mx-auto">
            <h3>Add Teammate to <%= @project.name %> Project:</h3>
            <%= form_for [@project, @role] do |f| %>
                <%= render partial: "layouts/errors", locals: {record: @role} %>
                <div class="mb-3">
                <p>Select the Team Member:</p>
                <%= f.select(:user_id, User.where.not(id: @project.users).collect {|u| [u.name, u.id]}, {prompt: 'Select Person'}, class: "form-control" ) %>
                </div>
                <div class="mb-3">
                    <%= f.label :title, "Title:", class: "form-label" %>
                    <%= f.text_field :title, class: "form-control" %>
                </div>
                <div class="text-center">
                    <%= f.submit "Add Teammate", class: "btn btn-success" %>
                </div>
              <% end %>
        </div>
    </div>
</div>