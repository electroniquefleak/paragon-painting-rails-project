<div class="container">
    <div class="row">
        <div class="col-6 col-sm-12 mx-auto">
            <h3 class="text-center">Teammates for <%= @project.name %>:</h3>
            <% if @project.roles.any? %>
                <ul>
                    <% @project.roles.each do |role| %>
                        <li class="my-3"><%= role.user.name %>
                            <span>(<%= role.title %>)</span>
                            <% if current_user.admin? %>
                                <%= button_to "Remove Teammate", project_role_path(@project, role), method: :delete, class: "btn btn-danger", data: { Confirm: 'Are you sure?' } %>
                            <% end %>
                        </li>
                    <% end %>
                </ul>
            <% else %>
                <h5 class="text-center">No teammates assigned to the <%= @project.name %> project.</h5>
            <% end %>
            <div class="text-center my-3">
                <%= link_to "Add a teammate", new_project_role_path(@project), class: "btn btn-success" %>
            </div>
        </div>
    </div>
</div>